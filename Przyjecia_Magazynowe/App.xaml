<Application x:Class="Przyjecia_Magazynowe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Przyjecia_Magazynowe"
             xmlns:views="clr-namespace:Przyjecia_Magazynowe.Views"
             xmlns:viewmodels="clr-namespace:Przyjecia_Magazynowe.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ContractorsViewModel}">
                <views:ContractorsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:CreateContractorViewModel}">
                <views:CreateContractorView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:UpdateContractorViewModel}">
                <views:UpdateContractorView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ReceiptDocumentsViewModel}">
                <views:ReceiptDocumentsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:CreateReceiptDocumentViewModel}">
                <views:CreateReceiptDocumentView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:UpdateReceiptDocumentViewModel}">
                <views:UpdateReceiptDocumentView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ReceiptDocumentViewModel}">
                <views:ReceiptDocumentView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ContractorReceiptDocumentsViewModel}">
                <views:ContractorReceiptDocumentsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:CreateReceiptItemViewModel}">
                <views:CreateReceiptItemView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:UpdateReceiptItemViewModel}">
                <views:UpdateReceiptItemView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ReceiptItemViewModel}">
                <views:ReceiptItemView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
